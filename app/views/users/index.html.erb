<h1>List of Users</h1>
<ul>
	<% @users.each do |user| %>
	<li>
		<%= link_to(user.username, user_path(user)) %>

		<span style="margin-right: 500px; float: right;">
		<%= link_to 'Destroy', user,
               :confirm => 'Are you sure?',
               :method => :delete %>
        </span>
	</li>
	<br />
	<% end %>
</ul>